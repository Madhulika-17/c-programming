#include<stdio.h>
int findGCD(int n1,int n2){
while(n2!=0){
int temp=n2;
n2=n1%n2;
n1=temp;
}
return n1;
}
int findLCM(int n1,int n2){
int gcd=findGCD(n1,n2);
int lcm=(n1*n2)/gcd;
return lcm;
}
int main(){
int n1,n2;
printf("Enter two numbers: ");
scanf("%d %d",&n1,&n2);
int gcd=findGCD(n1,n2);
int lcm=findLCM(n1,n2);
printf("GCD of %d and %d =%d\n",n1,n2,gcd);
printf("LCM of %d and %d =%d\n",n1,n2,lcm);
return 0;
}
